<h2><%= link_to "#{fashion_show.title.upcase}", fashion_show_path(fashion_show) %>, <%= fashion_show.location %></h2>
<ul>
    <% fashion_show.designs.each do |design| %>
      <li><%= link_to design.name, design_path(design) %>, <%= design.style %>, <%= design.fashion %></li>
    <% end %>
</ul>

<h4>Participating Designers:</h4>
<ul>
  <% fashion_show.designers.uniq.each do |designer| %>
    <li><%= designer.name %></li>
  <% end %>
</ul>

<%= button_to "Cancel this show", fashion_show_path(fashion_show), method: :delete, data: { confirm: "Are you sure?" } %>
