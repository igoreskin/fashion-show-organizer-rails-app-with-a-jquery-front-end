<h3><%= link_to "#{fashion_show.title.upcase}", fashion_show_path(fashion_show) %>, <%= fashion_show.location %></h3>
<ul>
    <% fashion_show.designs.each do |design| %>
      <li><%= link_to design.name, fashion_show_design_path(fashion_show, design) %>, <%= design.style %>, <%= design.fashion %></li>
    <% end %>
</ul>

<strong>Participating Designers:</strong>
<ul>
  <% fashion_show.designers.uniq.each do |designer| %>
    <li><%= designer.name %></li>
  <% end %>
</ul>

<br>
